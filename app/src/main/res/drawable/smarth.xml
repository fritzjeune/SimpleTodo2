<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="7dp"
                />
            <stroke
                android:color="#f40713"
                android:width="1dp"
                />
            <gradient
                android:angle="90"
                android:startColor="#4141ec"
                android:endColor="#091487"
                />

        </shape>
    </item>


</selector>